{
  "version": "1.0.0",
  "description": "MCP server and client registry for NeuralHaunt",
  "servers": {
    "crm": {
      "name": "CRM Integration Server",
      "description": "Manages requirements, traceability, and stakeholder communication",
      "port": 3001,
      "protocol": "http",
      "endpoints": [
        "/requirements",
        "/traceability",
        "/stakeholders",
        "/notifications"
      ],
      "schema": "./servers/crm-server/schema.json"
    },
    "analytics": {
      "name": "Analytics Server",
      "description": "Collects metrics, generates dashboards, and manages alerts",
      "port": 3002,
      "protocol": "http",
      "endpoints": [
        "/metrics",
        "/dashboard",
        "/trends",
        "/alerts"
      ],
      "schema": "./servers/analytics-server/schema.json"
    }
  },
  "clients": {
    "crm-client": {
      "name": "CRM Client",
      "server": "crm",
      "implementation": "./clients/crm-client.ts"
    },
    "analytics-client": {
      "name": "Analytics Client",
      "server": "analytics",
      "implementation": "./clients/analytics-client.ts"
    }
  }
}
